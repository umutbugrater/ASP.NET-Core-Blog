@model Message

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>

    <div class="wrapper wrapper-content">
        <div class="row">

            <div class="col-lg-12 animated fadeInRight">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">
                        <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Mesaj taslaklarda kalacak"><i class="fa fa-pencil"></i> Taslak</a>
                        <a href="mailbox.html" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Mesaj gönderimi iptal edilecek"><i class="fa fa-times"></i> İptal Et</a>
                    </div>
                    <h2>
                        Yeni Mesaj Oluştur
                    </h2>
                </div>
                <div class="mail-box">


                    <div class="mail-body">

                        <form method="post" asp-area="Admin" asp-controller="AdminMessage" asp-action="SendMessage">


                            <div class="form-group ">
                                <label class="col-sm-2 col-form-label">Alıcı:</label>
                                @Html.DropDownListFor(x=>x.ReceiverID,(List<SelectListItem>)ViewBag.users,new{@class="form-control"})
                                @Html.ValidationMessageFor(x=>x.ReceiverID,"",new {@class="text-danger"})

                            </div>
                            <div class="form-group ">
                                <label class="col-sm-2 col-form-label">Konu:</label>

                                <input type="text" class="form-control" asp-for="@Model.MessageSubject">
                                @Html.ValidationMessageFor(x=>x.MessageSubject,"",new {@class="text-danger"})
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-2 col-form-label">Mesajınız:</label>

                                <textarea class="form-control" asp-for="@Model.MessageDetails" rows="4" cols="10"></textarea>
                                @Html.ValidationMessageFor(x=>x.MessageDetails,"",new {@class="text-danger"})
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mail-body text-right tooltip-demo">
                                <button class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</button>
                                <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Vazgeç"><i class="fa fa-times"></i> Vazgeç</a>
                                <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslağa taşı"><i class="fa fa-pencil"></i> Taslak</a>
                            </div>
                            <div class="clearfix"></div>

                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>


    <!-- SUMMERNOTE -->
    <script src="~/inspinia-gh-pages/js/plugins/summernote/summernote-bs4.js"></script>

    <script>
        $(document).ready(function () {

            $('.summernote').summernote();

        });

    </script>
</body>

</html>



@model Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="zxx">
<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
	  rel="stylesheet">
<link href="~/userlayout/css/single.css" rel="stylesheet" />

<link href="~/userlayout/css/contact.css" rel="stylesheet" type="text/css"/>
<body>

	<!--/main-->
	<section class="main-content-w3layouts-agileits">

		<h3 class="tittle" style="font-size:2.5em;text-align:center;margin-block-start:1em;margin-block-end:1em;margin-inline-start:0px;margin-inline-end:0px;">Bize Ulaşın</h3>
		<p class="sub text-center" style="text-align:center;text-transform:uppercase;letter-spacing:5px;">Düşünceleriniz bizim için çok kıymetli</p>
		<div class="contact-map inner-sec">

			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3061.5427082494407!2d32.85351507736632!3d39.884479971530276!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34f807ed9c29b%3A0x2b793b0a8c1db873!2sAtakule!5e0!3m2!1str!2str!4v1704661568393!5m2!1str!2str"
					class="map" style="border:0" allowfullscreen=""></iframe>

		</div>
		<div class="ad-inf-sec bg-light">
			<div class="container">
				<div class="address row">

					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="far fa-map"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Adres</h6>
								<p>
									Ankara, TÜRKİYE

								</p>
							</div>
						</div>

					</div>
					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="far fa-envelope"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Mail</h6>
								<p>
									Email :
									<a href="mailto:example@email.com"> blog@example.com</a>

								</p>
							</div>

						</div>
					</div>
					<div class="col-lg-4 address-grid">
						<div class="row address-info">
							<div class="col-md-4 address-left text-center">
								<i class="fas fa-mobile-alt"></i>
							</div>
							<div class="col-md-8 address-right text-left">
								<h6>Telefon</h6>
								<p>+90 234 567 8901</p>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="contact_grid_right">
				<form method="post">
					<div class="row contact_left_grid">
						<div class="col-md-6 con-left" >
							<div class="form-group">
								<label for="validationCustom01 my-2">Adınız</label>
								<input class="form-control" type="text" style="padding-bottom:40px;" asp-for="ContactUserName" placeholder="" required="">
							</div>
							<div class="form-group">
								<label for="exampleFormControlInput1">Mail Adresiniz</label>
								<input class="form-control" type="email" style="padding-bottom:40px;" asp-for=ContactMail placeholder="" required="">
							</div>
							<div class="form-group">
								<label for="validationCustom03 my-2">Konu</label>
								<input class="form-control" type="text" style="padding-bottom:40px;" asp-for="ContactSubject" placeholder="" required="">
							</div>
						</div>
						<div class="col-md-6 con-right">
							<div class="form-group">
								<label for="textarea">Mesajınız</label>
								<textarea id="textarea"  asp-for="ContactMessage" placeholder=""></textarea>
							</div>
							<input class="form-control" type="submit" style="padding-bottom:40px;" value="Gönder">

						</div>
					</div>
				</form>
			</div>
		</div>
	</section>
	<script src="~/userlayout/js/bootstrap.js"></script>
	<!--//main-->
</body>

</html>
